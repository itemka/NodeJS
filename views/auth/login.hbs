<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a href="#login" class="active">Sign in</a></li>
        <li class="tab col s6"><a href="#register">Registration</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">

      {{#if loginError}}
      <p class="alert">{{loginError}}</p>
      {{/if}}

      <h1>Sign in</h1>
      <form action="/auth/login" method="POST" novalidate>
        <div class="input-field">
          <input id="email" name="email" type="email" class="validate" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Enter email"></span>
        </div>

        <div class="input-field">
          <input id="password" name="password" type="password" class="validate" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>

        <p>
          <a href="/auth/reset">Forgot password?</a>
        </p>

        <input type="hidden" name="_csrf" value={{ @root.csrf }}>

        <button class="btn btn-primary" type="submit">Sign in</button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">

      {{#if registerError}}
      <p class="alert">{{registerError}}</p>
      {{/if}}

      <h1>Registration</h1>
      <form action="/auth/register" method="POST" novalidate>
        <div class="input-field">
          <input id="remail" name="email" type="email" class="validate" required>
          <label for="remail">Email</label>
          <span class="helper-text" data-error="Enter email"></span>
        </div>

        <div class="input-field">
          <input id="rpassword" name="password" type="password" class="validate" required>
          <label for="rpassword">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>

        <div class="input-field">
          <input id="confirm" name="confirm" type="password" class="validate" required>
          <label for="confirm">Confirm</label>
          <span class="helper-text" data-error="Confirm password"></span>
        </div>

        <div class="input-field">
          <input id="name" name="name" type="text" class="validate" required>
          <label for="name">Name</label>
          <span class="helper-text" data-error="Enter name"></span>
        </div>

        <input type="hidden" name="_csrf" value={{ @root.csrf }}>

        <button class="btn btn-primary" type="submit">Registration</button>
      </form>
    </div>
  </div>
</div>
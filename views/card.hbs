<h1>Basket</h1>

<div id="card">
  {{#if products.length}}
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Count</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>

      {{#each products}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">
            Remove
          </button>
        </td>
      </tr>
      {{/each}}

    </tbody>
  </table>
  <p>
    <strong>Price</strong>
    <span class="price">{{price}}</span>
  </p>
  <form action="/orders" method="POST">
    <input type="hidden" name="_csrf" value={{ @root.csrf }}>
    <button type="submit" class="btn">Order</button>
  </form>
  {{else}}
  <p>Basket is empty</p>
  {{/if}}
</div>